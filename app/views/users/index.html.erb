<strong>WELCOME</strong> <%= @user.username %><br><br>

<%= link_to 'Events', root_path %>
<%= link_to 'View Attended Events', show_user_path(current_user.username) %>



<h3>Created Events</h3>
<ol>
<% @user.events.each do |event| %>
<li><%= link_to event.name, event_path(event) %></li><br>
<%= link_to 'Edit Event', edit_event_path(event), class: 'linkk' %>
<%= button_to 'Delete Event', destroy_event_user_path(event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?'} %>

<hr>
<% end %>
</ol>

<% if user_signed_in? %>
<%= button_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% end %>